---
import { Analytics } from "@vercel/analytics/react";
import ChurchWrap from "../components/ChurchWrap";
import "../styles/global.css";

const locale = Astro.currentLocale ?? "en";
---

<html lang={locale === "cn" ? "zh-CN" : "en"}>
  <head>
    <meta charset="utf-8" />
    <link
      rel="preload"
      href="/fonts/gc-grind.ttf"
      as="font"
      type="font/truetype"
      crossorigin
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.jpg" />
    <link
      rel="preload"
      href="/video/running-compressed.mp4"
      as="video"
      type="video/mp4"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Future 2026</title>
  </head>
  <body>
    <ChurchWrap client:only="react" locale={locale} />
    <Analytics client:only="react" />
  </body>
</html>
